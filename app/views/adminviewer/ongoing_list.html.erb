<!-- 공백 -->
<div class="row" style="height:70px;"></div>
<!-- body -->
<div class="container">
    <h1>진행중인 목록</h1>
    <!-- 공백 -->
    <div class="row" style="height:30px;"></div>
    <table class="table table-hover">
        <thead>
            <tr class="table-info">
                <th>#</th>
                <th>제목</th>
                <th colspan='3'>기간</th>
                <th>내용</th>
                <th>삭제</th>
                <th>수정</th>
            </tr>
        </thead>
        <tbody>
            <% @all_posts.each do |post| %>
            <tr>
                <th scope="row"><%= @idx %></th>
                <td><%= link_to post.title, post %></td>
                <td colspan ='3'><%= post.start %> 부터 <%= post.end %></td>
                <td><%= post.content %></td>
                <td><%= link_to 'Destroy',  post,  method: :delete, data: { confirm: 'Are you sure?' } %></td>
                <td><%= link_to "기간수정", edit_path(post) %></td>
                <% @idx = @idx - 1 %>
            </tr>
            <% end %>
        </tbody>
    </table>
    <%= will_paginate @all_posts %>
</div>
