<div class="card border-secondary mb-3" style="max-width: 18rem;">
  <div class="card-header"><%= @post.title %></div>
  <div class="card-body text-secondary">
    <h5 class="card-title"><%= @post.content %></h5>
    <p class="card-text">기간 : <%= @post.start %> ~ <%= @post.end %></p>
    <h6 class="card-title">설명</h5>
        <p><%= @post.content %></p>
  </div>
</div>


<% if current_user%>
    <div class="row">
        <div class="col-md-6"><h2>신청자 목록</h2></div>
        <div class="col-md-2">
            <form action="/adminviewer/export" method="get">
                <input type="hidden" name="post_id" value='<%= @post.id %>'>
                <input type="submit" class="btn btn-primary" value="엑셀로 받기">
            </form>
        </div>
    </div>
    <br>
    <br>
    <div class="col-md-8">
    <table class="table table-hover">
        <thead>
        <tr class="table-info">
            <% @form.column_names.select{|n| n != 'created_at' && n != 'updated_at'}.each do |column|%>
                <th><%= column %></th>
            <% end %>
        </tr>
        </thead>
        <tbody>
            <% @form.all.each do |f| %>
            <tr>
                <!-- <th scope="row"><%= f.id %></th> -->
                <% @form.column_names.select{|n| n != 'created_at' && n != 'updated_at'}.each do |n| %>
                    <td><%= f.read_attribute(n) %></td>
                <% end %>
            </tr>
            <% end %>
        </tbody>
    </table>
    </div>
<% else %>
        <form action="/uviewer/apply_form" method="get">
            <input type="hidden" name="post_id" value='<%= @post.id %>'>
            <input type="submit" class="btn btn-primary" value="apply">
        </form>
<% end %>
<%= link_to "back", request.referer.present? ? request.referer : default_path %>
